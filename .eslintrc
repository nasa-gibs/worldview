{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "extends": "eslint:recommended",
  "rules": {
    "quotes": [ "warn", "single" ]
  },
  "overrides": [
    {
      "files": [ "web/**/*.js", "test/**/*.js" ],
      "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script",
        "ecmaFeatures": {
          "jsx": false
        }
      },
      "rules": {
        "strict": "off",
        "semi": ["error", "always"],
        "indent": ["error", 2, {"SwitchCase": 1}],
        "quotes": "warn",
        "no-octal": "warn",
        "no-unused-vars": "warn",
        "no-console": "warn",
        "no-undef": "warn",
        "no-useless-escape": "warn"
      },
      "globals": {
        "wv": true,
        "wvx": true,
        "WVC": true,
        "buster": true,
        "jQuery": true,
        "$": true,
        "_": true
      }
    }
  ]
}
